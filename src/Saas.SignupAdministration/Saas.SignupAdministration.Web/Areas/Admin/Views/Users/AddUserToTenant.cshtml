@using Saas.Identity.Authorization.Model.Kind;
@model Saas.SignupAdministration.Web.Areas.Admin.Data.AddUserRequest

@{
    ViewData["Title"] = "Add User To Tenant";
}

<h1>Add User To Tenant</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUserToTenant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TenantId" />
            <div class="form-group">
                <input type="hidden" />
                <label asp-for="UserEmail" class="control-label"></label>
                <input asp-for="UserEmail" class="form-control" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
              <div class="form-group">
                <input type="hidden" />
                <label asp-for="ConfirmUserEmail" class="control-label"></label>
                <input asp-for="ConfirmUserEmail" class="form-control" />
                <span asp-validation-for="ConfirmUserEmail" class="text-danger"></span>
            </div>
            <div>
                <fieldset>
                    <legend>Payroll roles:</legend>
                    @foreach (var p in Model.Roles)
                    {
                        <input name="Roles" type="radio" value="@p" /> @p

                        <br />
                    }
                </fieldset>
            </div>
            <p />
            <p />
            <div class="form-group">
                <nobr>
                    <input asp-for="UserEmail" name="IsTenantAdmin" type="checkbox" />
                    <label asp-for="IsTenantAdmin" class="control-label">Tenant Admin</label>
                </nobr>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                @Html.ActionLink("Back to List", "Index", new { area = "Admin", controller="users", tenantid=Model.TenantId })
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
