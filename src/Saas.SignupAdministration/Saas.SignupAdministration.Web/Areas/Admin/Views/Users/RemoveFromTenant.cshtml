@model Saas.SignupAdministration.Web.Areas.Admin.Data.RemoveUserRequest

@{
    ViewData["Title"] = "Remove";
}

<h1>Remove</h1>

<h3>Are you sure you want to remove the user from the tenant?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DisplayName)
        </dd>
    </dl>
    
    <form asp-action="RemoveFromTenant">
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <input type="hidden" asp-for="TenantId" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Permissions" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
